decimal n1, n2, n3, media;

Console.Write("Digite a primeira nota do aluno: ");
n1 = Convert.ToDecimal(Console.ReadLine());
Console.Write("Digite a segunda nota do aluno: ");
n2 = Convert.ToDecimal(Console.ReadLine());
Console.Write("Digite a terceira nota do aluno: ");
n3 = Convert.ToDecimal(Console.ReadLine());

n1 = n1 * 1;
n2 = n2 * 2;
n3 = n3 * 3;

media = (n1 + n2 + n3) / 6;

Console.WriteLine($"A média ponderada do aluno é: {media:F2}");
