decimal total, andre, felipe, resto;

Console.Write("Digite o valor total da conta: R$ ");
total = Convert.ToDecimal(Console.ReadLine());

int carlos = (int)(total / 3);

resto = total - carlos;

andre = resto / 2;
felipe = resto / 2;

Console.WriteLine($"Carlos deve pagar: R$ {carlos}.00 , Andr√© deve pagar: R$ {andre:F2} , Felipe deve pagar: R$ {felipe:F2}");
